<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <%= gravatar_for @user %>


    </section>
  </aside>
  <div class="col-md-9">
    <% if @user.products.any? %>
        <h3>Кол-во продуктов (<%= @user.products.count %>)</h3>
        <ol class="products">
          <%= render @products %>
        </ol>
        <%= will_paginate @products %>
    <% end %>
  </div>
</div>