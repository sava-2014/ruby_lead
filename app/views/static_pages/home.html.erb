<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/product_form' %>
        </section>
      </aside>

      <div class="col-md-8">
        <h3>Мои продукты (<%= current_user.products.count %>) </h3>

        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="center jumbotron">
      <h1>Вас приветствует Lead Magnet!</h1>

      <h4>
        Конструктор лидогенерации, который за счет системного и поэтапного подхода - формулы лидогенерации, помогает
        выстроить стабильную маркетинговую связку . За счет прохождения Вами ключевых модулей, их заполнения и внедрения.
      </h4>

      <%= link_to image_tag("log.png", alt: "LeadMagnet"), 'https://vk.com/babenkoya' %>
      <h2></h2>
      <%= link_to "Зарегистрироваться", signup_path, class: "btn btn-large btn-primary" %>
    </div>
<% end %>